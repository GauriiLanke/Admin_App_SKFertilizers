<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Admin Title -->
    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/adminSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage orders with ease."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/adminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- View Orders Button -->
    <Button
        android:id="@+id/viewOrdersButton"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:text="View Orders"
        android:textSize="20dp"
        android:backgroundTint="#03DAC5"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/adminSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:text="Logout"
        android:textSize="20dp"
        android:backgroundTint="#D32F2F"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/viewOrdersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
